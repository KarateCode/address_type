<% form_for(:address, @address, :url=>{:action=>'create'}) do |f| %>
  <%= f.error_messages %>
  <%= f.hidden_field :address_type, {:value=>@address_type} %>

  <%= render :partial=>'addresses/form', :object=>f %>
  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', addresses_path %>
