<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Address1</th>
    <th>Address2</th>
    <th>City</th>
    <th>State</th>
    <th>Zip</th>
    <th>Country</th>
  </tr>

<% for address in @addresses %>
  <tr>
    <td><%=h address.line1 %></td>
    <td><%=h address.line2 %></td>
    <td><%=h address.city %></td>
    <td><%=h address.state %></td>
    <td><%=h address.zip %></td>
    <td><%=h address.country %></td>
    <td><%= link_to 'Show', {:action=>'show', :id=>address.id} %></td>
    <td><%= link_to 'Edit', {:action=>'edit', :id=>address.id} %></td>
    <td><%= link_to 'Destroy', {:action=>'destroy', :id=>address.id}, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

